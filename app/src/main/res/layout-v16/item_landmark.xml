<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_image_108dp"
        android:layout_height="@dimen/list_item_image_108dp"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/item_mini_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="@dimen/item_layout_margin_16dp"
        android:layout_marginVertical="@dimen/item_layout_margin_8dp"
        android:layout_toLeftOf="@id/arrow"
        android:layout_toRightOf="@id/image"
        android:orientation="vertical"
        android:layout_toStartOf="@id/arrow"
        android:layout_toEndOf="@id/image">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titillium_web"
            android:gravity="end"
            android:textSize="@dimen/name_text_22sp"
            android:lineSpacingMultiplier="0.8"
            android:textColor="@color/item_name_gray"
            tools:text="Riga Dome Cathedral" />

        <TextView
            android:id="@+id/distance_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titillium_web"
            android:gravity="end"
            android:textSize="@dimen/distance_text_18sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/list_item_arrow_36dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/item_layout_margin_16dp"
        android:gravity="center"
        android:scaleX="-1"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:tint="@color/item_name_gray"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/item_layout_margin_16dp" />

</RelativeLayout>

